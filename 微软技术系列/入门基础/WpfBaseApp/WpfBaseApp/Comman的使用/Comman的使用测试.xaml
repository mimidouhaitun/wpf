<Window x:Class="WpfBaseApp.Comman的使用.Comman的使用测试"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBaseApp"
        mc:Ignorable="d"
        Title="Comman的使用" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center">
        <TextBox Width="100" Height="30" Margin="0 0 0 10" Text="{Binding Name}"></TextBox>
        <TextBox Width="100" Height="30" Margin="0 0 0 10" Text="{Binding Name}"></TextBox>
        <TextBlock HorizontalAlignment="Center" Margin="0 0 0 10">控件的所有事件都会调用Comman接口</TextBlock>
        <TextBlock HorizontalAlignment="Center" Margin="0 0 0 10">将IComman的实现类作为模型类的一个属性，绑定这个属性相当于绑定所有事件</TextBlock>
        <TextBlock HorizontalAlignment="Center" Margin="0 0 0 10">用到了绑定事件的方法</TextBlock>
        <Button Width="100" Height="30" Command="{Binding ShowMsg}">测试</Button>
    </StackPanel>
</Window>
